import java.util.Scanner;

public class Tillzero {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int num=1;
        int count=0;
        while(num!=0){
            System.out.println("Enter a number:");
            num= in.nextInt();
            count=count+num;
        }
        System.out.println("the sum is "+count);
        
    }
}
